{
  "compilerOptions": {
      "outDir": "./build",
      "allowJs": true,
      "target": "ES6",
      "moduleResolution": "node",
      "module": "commonjs",
      "rootDir": "./",
      "baseUrl": "./",
      "paths": {
          "@src/*" : ["src/*"],
          "@lib/*": ["lib/*"]
      },
      "typeRoots": [
        "node_modules/@types"
      ]
  },
  "lib": [
      "ES6"
  ],
  "include": [
      "./src/**/*",
      "./lib/**/*"
  ]
}