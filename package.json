{
  "name": "autofont",
  "version": "1.0.5",
  "description": "Automatically reads all font files in a folder and creates a autofont.scss file containing @font-face data. Can run in watch mode and automatically update the autofont.scss from addition and removal of fonts in the folder.",
  "main": "./build/src/app.js",
  "bin": {
    "autofont": "./bin/autofont.js"
  },
  "directories": {
    "lib": "lib"
  },
  "dependencies": {
    "commander": "^2.10.0",
    "fontmachine": "^0.2.0"
  },
  "devDependencies": {
    "@types/es6-promise": "^3.3.0",
    "@types/node": "^10.5.2",
    "tslint": "^4.5.1",
    "typescript": "^2.4.1"
  },
  "scripts": {
    "test": "npm run build && node ./build/src/app.js",
    "build": "tsc",
    "watcher": "npm run build -- -w"
  },
  "repository": {
    "type": "git",
    "url": "git+https://github.com/Jonathan002/autofont.git"
  },
  "keywords": [
    "fonts",
    "@font-face",
    "scss",
    "watcher",
    "auto",
    "npm"
  ],
  "author": "Jonathan Fernandez",
  "license": "MIT",
  "bugs": {
    "url": "https://github.com/Jonathan002/autofont/issues"
  },
  "homepage": "https://github.com/Jonathan002/autofont#readme"
}
